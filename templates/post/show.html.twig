{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <div class="card" style="width: 25rem;">
        <img src="{{ post.imgsrc }}" class="card-img-top" alt="...">
        <div class="card-body">
            <h3 class="card-title"><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></h3>
            <p class="card-text">{{ post.content }}</p>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-light"><a href="{{ path('post_edit', {'id': post.id}) }}">edit</a></button>
                {{ include('post/_delete_form.html.twig') }}
            </div>
        </div>
    </div><br>
    <button type="button" class="btn btn-light"><a href="{{ path('post_index') }}">back to list</a></button>
{% endblock %}
